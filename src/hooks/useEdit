import { useState, useCallback } from 'react';

export function useEdit(initialTitulo = '', initialTexto = '') {
  const [isEditing, setIsEditing] = useState(false);
  const [titulo, setTitulo] = useState(initialTitulo);
  const [texto, setTexto] = useState(initialTexto);

  const startEditing = useCallback(() => {
    setIsEditing(true);
  }, []);

  const saveChanges = useCallback(() => {
    // Aqui você pode adicionar lógica para salvar no backend
    setIsEditing(false);
  }, []);

  const updateTitulo = useCallback((newTitulo) => {
    setTitulo(newTitulo);
  }, []);

  const updateTexto = useCallback((newTexto) => {
    setTexto(newTexto);
  }, []);

  return {
    isEditing,
    titulo,
    texto,
    startEditing,
    saveChanges,
    updateTitulo,
    updateTexto
  };
}